{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "typeRoots": ["./node_modules/@types", "./types"]
  },
  "include": [
    "app.ts",
    "bin/**/*",
    "routes/**/*",
    "controllers/**/*",
    "models/**/*",
    "db/**/*",
    "auth/**/*",
    "middleware/**/*",
    "services/**/*",
    "utils/**/*",
    "types/**/*"
  ],
  "exclude": [
    "node_modules",
    "client",
    "dist"
  ]
}
