# Server Configuration
PORT=3720
NODE_ENV=development

# Database Configuration
# Use SQLite when DATABASE_URL is unset. Set DATABASE_URL to Supabase Postgres to use same DB as mainbranchcloned.
# DATABASE_URL=postgresql://postgres.[project-ref]:[YOUR-PASSWORD]@aws-0-[region].pooler.supabase.com:6543/postgres
SQLITE_STORAGE=./var/dev.sqlite

# JWT Configuration (generate a secure random string for production)
JWT_SECRET=your-jwt-secret-change-in-production
JWT_ACCESS_TTL=15m
JWT_REFRESH_TTL=7d

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-change-in-production

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=100

# CORS Configuration
CLIENT_ORIGINS=http://localhost:3720,http://localhost:3000

# Email Configuration (Optional - for password reset and scheduled exports)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your-email@example.com
# SMTP_PASS=your-password
# SMTP_FROM=noreply@example.com

# Public URL (for email links)
PUBLIC_BASE_URL=http://localhost:3720

# Timezone
TZ=UTC
